region             = "{{ nomad_region }}"
datacenter         = "{{ nomad_datacenter }}"
data_dir           = "/opt/nomad/data"
log_level          = "INFO"
log_json           = true
leave_on_interrupt = false
leave_on_terminate = true
acl {
  enabled = true
}
telemetry {
  publish_allocation_metrics = true
  publish_node_metrics       = true
}
autopilot {
  cleanup_dead_servers = true
}
server {
  enabled          = true
  bootstrap_expect = {{ nomad_bootstrap_expect }}
  encrypt          = "{{ nomad_gossip_encription_key }}"
  server_join {
    retry_join = [
      {% for server in nomad_server_retry_join %}
      "{{ server }}",
      {% endfor %}
    ]
  }
}
client {
  enabled = true
  meta {
    NodeRegion            = "{{ nomad_region }}"
    NodeDatacenter        = "{{ nomad_datacenter }}"
    NodeType              = "control-plane"
  }
}
plugin "raw_exec" {
  config {
    enabled = true
  }
}
plugin "docker" {
  config {
    allow_privileged = true
    allow_caps       = ["all"]
    volumes {
      enabled      = true
    }
  }
}
tls {
  http                   = true
  rpc                    = true
  ca_file                = "/home/vagrant/nomad/certs/nomad-agent-ca.pem"
  cert_file              = "/home/vagrant/nomad/certs/{{nomad_region}}-server-nomad.pem"
  key_file               = "/home/vagrant/nomad/certs/{{nomad_region}}-server-nomad-key.pem"
  verify_server_hostname = true
  verify_https_client    = false
}
advertise {
  http = "{{ ansible_facts.eth1.ipv4.address }}"
  rpc = "{{ ansible_facts.eth1.ipv4.address }}"
  serf = "{{ ansible_facts.eth1.ipv4.address }}"
}
bind_addr = "0.0.0.0"